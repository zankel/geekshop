@model IEnumerable<GGstore.Web.Models.GameModel>

<br/>
<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Game List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>Create New Game
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Descrição
                </th>
                <th>
                    Imagem
                </th>
                <th>
                   Gêneros
                </th>
                <th>
                    Plataformas
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @((item.Price).ToString("c"))
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.ImageURL
                    </td>
                    <td>
                        @foreach (var genero in item.Generos)
                        {
                            <span>
                                @string.Join(" - ", item.Generos.Select(g => g.Name))
                            </span>
                        }
                    </td>
                    <td>
                        @foreach (var plataforma in item.Plataformas)
                        {
                            <span>
                                @string.Join(" - ", item.Plataformas.Select(g => g.Name))
                            </span>
                        }
                    </td>
                    <td>
                       <a asp-action="ProductUpdate" class="btn btn-success" asp-route-id="@item.Id">
                           <i class="fas fa-edit"></i>
                       </a>
                       <a asp-action="ProductDelete" class="btn btn-danger" asp-route-id="@item.Id">
                           <i class="fas fa-trash"></i>
                       </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>